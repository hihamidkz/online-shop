<%= simple_form_for @book, html: { multipart: true } do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.input :title, :label => "Название", required: true, input_html: { class:"title"}, wrapper: false,
    	label_html: { class:"label" } %>
  </div>

  <div class="field">
    <%= form.input :author, :label => "Автор", required: true, input_html: { class:"author"}, wrapper: false,
    	label_html: { class:"label" }%>
  </div>

  <div class="field">
    <%= form.input :year, as: :string, label: "Год издания", input_html: { class:"year_text"}, wrapper: false,
    	label_html: { class:"label" }%>
  </div>

  <div class="field">
    <%= form.input :price, as: :string, label: "Цена", required: true, input_html: { class:"price_text"}, wrapper: false,
    	label_html: { class:"label" }%>
  </div>

  <div class="field">
    <%= form.input :genre, :label => "Жанр", required: false, input_html: { class:"genre"}, wrapper: false,
    	label_html: { class:"label" } %>
  </div>

  <div class="field">
    <%= form.input :description, :label => "Описание", required: true, input_html: { class:"textarea" }, wrapper: false,
    	label_html: { class:"label" } %>
  </div>

  <div class="field">
    <%= form.input :image, as: :file, reduired: true, input_html: { class:"file-input book-page" }, label: false, wrapper: false %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
